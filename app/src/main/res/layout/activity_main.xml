<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 原有的Shizuku功能保持不变 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shizuku Shell 工具"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/judge_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="检查权限"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/request_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="申请权限"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/connect_shizuku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接Shizuku服务"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/input_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入Shell命令"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/execute_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行命令"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/execute_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="执行结果将显示在这里"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:fontFamily="monospace"
            android:layout_marginBottom="32dp" />

        <!-- 分隔线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp" />

        <!-- 添加主题安装功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题安装工具"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSelectTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择主题文件 (.mtz)"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择文件"
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnMoveTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移动主题文件"
            android:enabled="false"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvMoveStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="等待操作..."
            android:padding="8dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnInstall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安装主题"
            android:enabled="false" />

    </LinearLayout>

</ScrollView>
