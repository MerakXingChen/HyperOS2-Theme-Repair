<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小米主题安装器"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Shizuku 状态卡片 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shizuku 状态"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvShizukuStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="检查中..."
                    android:textColor="@android:color/holo_orange_dark"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnRequestShizuku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请 Shizuku 权限"
                    android:layout_gravity="end"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 第一步：选择主题文件 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="步骤 1：选择主题文件"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnSelectTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="选择主题文件 (.mtz)"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSelectedFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未选择文件"
                    android:textColor="@android:color/darker_gray"
                    android:padding="8dp"
                    android:background="@android:drawable/editbox_background" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 第二步：移动文件 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:cardCornerRadius="8dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="步骤 2：移动文件到系统目录"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="首次使用需要将主题文件移动到系统指定目录"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnMoveTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="移动主题文件"
                    android:enabled="false"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvMoveStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="等待操作..."
                    android:textColor="@android:color/darker_gray"
                    android:padding="8dp"
                    android:background="@android:drawable/editbox_background" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 第三步：验证密码和安装 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cardCornerRadius="8dp"
            android:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="步骤 3：安装主题"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="请输入密码">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnInstall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="安装主题"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注意：安装主题需要正确的密码"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
